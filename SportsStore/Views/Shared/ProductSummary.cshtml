@model Product

<div class="card card-outline-primary" style="display: flex; flex-direction: column; justify-content: space-between; width: 18rem; margin: 10px;">
    <img class="card-img-top" src="@Model.ImageUrl" alt="Card image cap">
    <div class="card-body" style="padding: 20px">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <div style="display: flex; justify-content: space-between">
            <div class="badge badge-pill badge-primary" style="display: flex; justify-content: center; align-items: center">
                <span>@Model.Price.ToString("0.00")$</span>
            </div>
            <form id="@Model.ProductId" asp-action="AddToCart"
                      asp-controller="Cart" method="post">
                <input type="hidden" asp-for="ProductId"/>
                <input type="hidden" name="returnUrl"
                       value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
                <span class="card-text p-1">
                    <button type="submit"
                            class="btn btn-success btn-sm pull-right"
                            style="float: right; cursor: pointer">
                        Add to Cart
                    </button>
                </span>
            </form>
        </div>
    </div>
</div>