<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="/node_modules/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" type="text/css" href="~/css/_AdminLayout.css"/>
</head>
<body>
<header class="row">
    <div class="col">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="col-2">
        <a class="btn btn-outline-secondary" asp-action="Logout"
           asp-controller="Account">Log Out</a>
        <a class="btn btn-outline-secondary"
           asp-action="List" asp-controller="Product">Home page</a>
    </div>
</header>
<div class="wrap">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>
    }
    @RenderBody()
</div>
</body>
</html>